<div class="container">
  <div class="main-container">
    <div class="instrument-show">
      <%= cl_image_tag @instrument.photo.key %>
      <h1> <%= @instrument.name %></h1>
      <h5> <%= @instrument.category %></h5>
      <h2>Some details:</h2>
      <p> <%= @instrument.description%> </p>
      <h2>for only <strong> <%= @instrument.price_per_day %> â‚¬</strong>/day!</h2>
    </div>

    <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @marker.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

  </div>
<div class="calender">
  <%= simple_form_for ([@instrument, @booking]) do |f| %>
    <%= f.input :start_date , as: :date %>
    <%= f.input :end_date, as: :date %>
    <%= f.submit "Make booking", class: "button-green" %>
    <%= link_to "Go Back", instruments_path, class: "button-white" %>
    <% end %>
    </div>
</div>

<%= render "shared/footer" %>

