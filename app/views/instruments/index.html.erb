<div class="container">
  <h2 class="text-center">Instruments</h2>
    <div class= "cards-index ">
      <% @instruments.each do |instrument| %>
        <div class="card-instrument">
          <% if instrument.photo.attached? %>
            <%= cl_image_tag instrument.photo.key %>
          <% end %>
        <div class="card-instrument-infos">
          <div>
            <h2><%= link_to instrument.name, instrument_path(instrument) %></h2>
            <p><%= instrument.category %></p>
          </div>
          <h2 class="card-instrument-pricing"><%= instrument.price_per_day %>â‚¬</h2><p> /day</p>
        </div>
      </div>
      <% end %>
    </div>
    <%= link_to "Add new Instrument", new_instrument_path, class: "button-green" %>
  </div>
</div>
<%= render "shared/footer" %>

