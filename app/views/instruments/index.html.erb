<div class="container">
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

  <h2 class="text-center">Instruments</h2>
  <%= link_to "New Instrument", new_instrument_path, class: "button-green" %>
    <div class= "d-flex">

<div class="row justify-content-center">
  <h2>Instruments</h2>
    <div class= "cards-index ">

      <% @instruments.each do |instrument| %>
        <div class="card-instrument">
          <% if instrument.photo.attached? %>
            <%= cl_image_tag instrument.photo.key %>
          <% end %>
        <div class="card-instrument-infos">
          <div>
            <h2><%= link_to instrument.name, instrument_path(instrument) %></h2>
            <p><%= instrument.category %></p>
          </div>
          <div class="card-instrument-pricing">
            <h2><%= instrument.price_per_day %>â‚¬</h2>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <%= link_to "Add new Instrument", new_instrument_path, class: "button-green" %>
  </div>
  </div>
</div>
<%= render "shared/footer" %>

